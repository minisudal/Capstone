<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="자취생 TIP"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="22dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tipbutton1"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_above="@+id/tipbutton3"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="20dp"
        android:elevation="5dp"
        android:paddingTop="15dp"
        android:background="@drawable/green_button"
        android:drawableTop="@drawable/group_70"
        android:textColor="#FFFFFF"
        android:text="식재료 보관법" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tipbutton2"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_above="@+id/tipbutton4"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/tipbutton1"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:elevation="5dp"
        android:paddingTop="15dp"
        android:textColor="#136F53"
        android:background="@drawable/white_button"
        android:drawableTop="@drawable/group_71"
        android:text="음식물 분리배출" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tipbutton3"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="220dp"
        android:elevation="5dp"
        android:paddingTop="15dp"
        android:background="@drawable/white_button"
        android:drawableTop="@drawable/group_77"
        android:textColor="#136F53"
        android:text="좋은 재료 고르는 법" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tipbutton4"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="220dp"
        android:elevation="5dp"
        android:paddingTop="15dp"
        android:layout_toEndOf="@+id/tipbutton3"
        android:background="@drawable/white_button"
        android:drawableTop="@drawable/group_72"
        android:textColor="#136F53"
        android:text="주방 살림 팁" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tipbutton5"
        android:layout_width="350dp"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="120dp"
        android:elevation="5dp"
        android:background="@drawable/green_button"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="MEMO" />

</RelativeLayout>